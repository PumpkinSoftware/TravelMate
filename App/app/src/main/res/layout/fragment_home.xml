<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header user -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@android:color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"

            app:civ_border_width="0dp"

            android:id="@+id/user_image"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/man" />

        <TextView
            android:id="@+id/username"
            style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="cursive"
            android:text="@string/user_logged"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Fine header -->

    <!-- Swipe Refresh -->
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

    <!-- Contenuto per lo scrolling -->
    <ScrollView
        android:id="@+id/scrollableContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Card viaggi -->
            <android.support.v7.widget.CardView
                style="@style/Widget.MaterialComponents.CardView"
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mtrl_card_spacing"
                android:layout_marginTop="@dimen/mtrl_card_spacing"
                android:layout_marginRight="@dimen/mtrl_card_spacing"
                android:background="@android:color/white"
                android:minHeight="200dp">

                <!-- Contenuto card -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">

                    <ImageView
                        android:id="@+id/travel_image"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:scaleType="centerCrop"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:src="@drawable/new_york" />

                    <TextView
                        android:id="@+id/travel_name"
                        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/travel_image"
                        android:fontFamily="cursive"
                        android:text="@string/NYTrip"
                        android:textColor="@android:color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/travel_name">

                        <TextView
                            android:id="@+id/group_number"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:padding="8dp"
                            android:paddingStart="18dp"
                            android:text="@string/n58"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/group_image"
                            android:layout_width="37dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/baseline_group_black_24dp" />

                        <TextView
                            android:id="@+id/budget_number"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:padding="8dp"
                            android:paddingStart="18dp"
                            android:text="@string/n500"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/budget_image"
                            android:layout_width="27dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/baseline_euro_symbol_black_24dp" />

                        <Button
                            android:id="@+id/button"
                            style="@android:style/Widget.Holo.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:paddingStart="100dp"
                            android:text="@string/MORE"
                            android:textColor="@android:color/darker_gray"
                            android:textColorLink="@android:color/holo_orange_light"
                            tools:text="MORE" />

                        <ImageView
                            android:id="@+id/sharing_image"
                            android:layout_width="38dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:paddingStart="10dp"
                            android:tint="@android:color/darker_gray"
                            app:srcCompat="@drawable/baseline_share_black_24dp" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Card viaggi 2 -->
            <android.support.v7.widget.CardView
                style="@style/Widget.MaterialComponents.CardView"
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mtrl_card_spacing"
                android:layout_marginTop="@dimen/mtrl_card_spacing"
                android:layout_marginRight="@dimen/mtrl_card_spacing"
                android:layout_below="@+id/card1"
                android:background="@android:color/white"
                android:minHeight="200dp">

                <!-- Contenuto card -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">

                    <ImageView
                        android:id="@+id/travel_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginStart="0dp"
                        android:scaleType="centerCrop"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:src="@drawable/amsterdam" />

                    <TextView
                        android:id="@+id/travel_name2"
                        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/travel_image2"
                        android:fontFamily="cursive"
                        android:text="Amsterdam Trip"
                        android:textColor="@android:color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/travel_name2">

                        <TextView
                            android:id="@+id/group_number2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:padding="8dp"
                            android:paddingStart="18dp"
                            android:text="3/5"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/group_image2"
                            android:layout_width="37dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/baseline_group_black_24dp" />

                        <TextView
                            android:id="@+id/budget_number2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:padding="8dp"
                            android:paddingStart="18dp"
                            android:text="200"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/budget_image2"
                            android:layout_width="27dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/baseline_euro_symbol_black_24dp" />

                        <Button
                            android:id="@+id/button2"
                            style="@android:style/Widget.Holo.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:paddingStart="100dp"
                            android:text="@string/MORE"
                            android:textColor="@android:color/darker_gray"
                            android:textColorLink="@android:color/holo_orange_light"
                            tools:text="MORE" />

                        <ImageView
                            android:id="@+id/sharing_image2"
                            android:layout_width="38dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:paddingStart="10dp"
                            android:tint="@android:color/darker_gray"
                            app:srcCompat="@drawable/baseline_share_black_24dp" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Card viaggi 3 -->
            <android.support.v7.widget.CardView
                style="@style/Widget.MaterialComponents.CardView"
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mtrl_card_spacing"
                android:layout_marginTop="@dimen/mtrl_card_spacing"
                android:layout_marginRight="@dimen/mtrl_card_spacing"
                android:layout_below="@+id/card2"
                android:background="@android:color/white"
                android:minHeight="200dp">

                <!-- Contenuto card -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">

                    <ImageView
                        android:id="@+id/travel_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginStart="0dp"
                        android:scaleType="centerCrop"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:src="@drawable/dubai" />

                    <TextView
                        android:id="@+id/travel_name3"
                        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/travel_image3"
                        android:fontFamily="cursive"
                        android:text="Dubai Journey"
                        android:textColor="@android:color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/travel_name3">

                        <TextView
                            android:id="@+id/group_number3"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:padding="8dp"
                            android:paddingStart="18dp"
                            android:text="1/4"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/group_image3"
                            android:layout_width="37dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/baseline_group_black_24dp" />

                        <TextView
                            android:id="@+id/budget_number3"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:padding="8dp"
                            android:paddingStart="18dp"
                            android:text="400"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/budget_image3"
                            android:layout_width="27dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/baseline_euro_symbol_black_24dp" />

                        <Button
                            android:id="@+id/button3"
                            style="@android:style/Widget.Holo.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:paddingStart="100dp"
                            android:text="@string/MORE"
                            android:textColor="@android:color/darker_gray"
                            android:textColorLink="@android:color/holo_orange_light"
                            tools:text="MORE" />

                        <ImageView
                            android:id="@+id/sharing_image3"
                            android:layout_width="38dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:paddingStart="10dp"
                            android:tint="@android:color/darker_gray"
                            app:srcCompat="@drawable/baseline_share_black_24dp" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>